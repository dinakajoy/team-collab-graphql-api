{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleSuffixes": [".js", ".ts"],
    "types": ["node"]
  },
  "include": ["config/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}